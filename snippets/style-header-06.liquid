<style>
  /*  Header Top  */
  {% assign bg_header_top =  section.settings.bg_header_top %}
  {% assign text_header_top_color = section.settings.text_header_top_color %}
  {% assign font_size_text = section.settings.font_size_text %}
  {% assign logo_menu_item_max_height = section.settings.logo_menu_item_max_height %}

  /*  Search  */
  {% assign bg_icon_search = section.settings.bg_icon_search %}

  {% assign bg_search_form_color = section.settings.bg_search_color %}
  {% assign search_form_text_color = section.settings.search_text_color %}
  {% assign search_form_icon_color = section.settings.search_icon_color %}
  
  /*  Header Bottom  */
  {% assign max_height_logo_mb =  section.settings.max_height_logo_mb %}
  {% assign max_height_logo_pc =  section.settings.max_height_logo_pc %}
  
  {% assign bg_header_bottom_color = section.settings.bg_header_bottom_color %}
  
  
  /*  Cart  */
  {% assign bg_cart_color = section.settings.bg_cart_color %}
  {% assign cart_color = section.settings.cart_color %}
  {% assign logo_color = section.settings.logo_text_color %}
  
  .header-06 .wrapper-header-top .top-menu-text ul li a {
    font-size: {{ font_size_text }};
  }

  .navigation-06 .header-panel-bt a.logo-title {
    color: {{ logo_color }};
  }
  .header-top {
  	background-color: {{ bg_header_top }};
    color: {{ text_header_top_color }};
  }
  
  .header-top a {
  	color: {{ text_header_top_color }};
  }
  
  .header-top .top-message p a:hover {
  	border-bottom-color: {{ text_header_top_color }};
  }
  
  .header-top .close:hover {
  	color: {{ text_header_top_color }};
  }
  
  .cart-icon .cartCount {
    background-color: {{ bg_cart_color }};
    color: {{ cart_color }};
  }

  .logo-img {
  	display: block;
  }
  
  .header-mb .logo-img img,
  .logo-fixed .logo-img img,
  .header-mb .logo-title {
    max-height: {{ max_height_logo_mb }};
  }
  
  .navigation-06 .logo-img img {
  	max-height: {{ max_height_logo_pc }};
  }

  .header-06 .wrapper-header-top .top-menu-text ul li img {
    max-height: {{ logo_menu_item_max_height }}
  }

  .header-06 .wrapper-header-top .top-menu-text ul li svg{
    height: {{ logo_menu_item_max_height }};
    width: auto;
  }
  .header-06 .wrapper-header-top .top-menu-text ul li.active {
    background-color: {{ section.settings.text_active_bg_color  }} !important;
  }
  .header-06 .wrapper-header-top .top-menu-text ul li.active a {
    color: {{ section.settings.text_active_color }} !important;
    border-left: none !important;
  }
  .header-06 .wrapper-header-top .top-menu-text ul li.active + li a {
    border-left: none !important;
  }
  .header-06 .wrapper-header-top .cus-ser-text {
    font-size: {{ section.settings.font_size_content_2 }};
  }

  .navigation-06 .search-form .header-search__form {
    background-color: {{ bg_search_form_color }};
    border: 1px solid {{ section.settings.bg_border_search_color }};
  }

  .header-06 .header-top .customer-links svg {
    color: {{ section.settings.icon_account_color }};
  }
  .header-06 .header-top .nav-wishlist .wishlist-quantity {
    background: {{ section.settings.bg_wishlist_color }};
    color: {{ section.settings.wishlist_color }};
  }
  .header-06 .header-top .nav-wishlist svg {
    color: {{ section.settings.icon_wishlist_color }};
  }

  .header-06 .header-top .cart-icon svg {
    color: {{ section.settings.icon_wishlist_color }};
  }

  .header-06 .header-top .cart-icon svg {
    color: {{ section.settings.icon_cart_color }};
  }

  .navigation-06 .search-form {
    background-color: {{ bg_search_form_color }};
  }
  .wrapper-header .search-bar .icon-search,
  .search-open .wrapper-header .search-bar .icon-search,
  .header-mb.header_mobile_3 .header-mb-right .search-mb .icon-search {
    background: {{ bg_icon_search }};
  }
  .wrapper-header .search-bar .icon-search svg {
    color: {{ search_form_icon_color }};
  }


  .navigation-06 .input-group-field {
    color: {{ search_form_text_color }};
  }

  .navigation-06 .input-group-field::-webkit-input-placeholder {
    color: {{ search_form_text_color }};
  }

  .navigation-06 .input-group-field::-moz-placeholder {
    color: {{ search_form_text_color }};
  }

  .navigation-06 .input-group-field:-ms-input-placeholder {
    color: {{ search_form_text_color }};
  }

  .navigation-06 .input-group-field:-moz-placeholder {
    color: {{ search_form_text_color }};
  }

  .navigation-06 .quickSearchResultsWrap .list-item .highlight:hover {
    background-color: {{ bg_search_form_color }};
    box-shadow: inset 0px 1px 8px 0px rgba(0, 0, 0, 0.2);
  }

  @media (max-width: 1199px) {
    .header-06 .header-logo svg {
      height: {{ max_height_logo_mb }}
    }
    .wrapper-header .header-search__form {
      background-color: {{ bg_search_form_color }}; 
      border: 1px solid {{ section.settings.bg_border_search_color }};
    }
    .search-open .wrapper-header .search-bar .icon-search {
      background-color: {{ bg_icon_search }};
    }

    {% unless settings.layout_style == 'layout_style_fullwidth' %}
      .header-06 .header-mb .cart-icon .cartCount {
        background-color: {{ settings.color_menu_mb }};
        color: {{ settings.bg_menu_mb }};
      }
    {% endunless%}

    .navigation-06 .header-bottom-midle .nav-wishlist .wishlist .wishlist-quantity {
        background-color: {{ settings.color_menu_mb }};
        color: {{ settings.bg_menu_mb }};
    }
  }

  @media (max-width:767px) {
      .wrapper-header .header-search__form {
          background-color: {{ bg_search_form_color }}; 
      }
  }
  
  @media (min-width:1200px) {
    
    .lang-currency-groups .btn-group .dropdown-item:hover,
    .lang-currency-groups .btn-group .dropdown-item:focus:
    .lang-currency-groups .btn-group .dropdown-item:active,
    .lang-currency-groups .btn-group .dropdown-item.active {
      color: {{ header_bottom_link_color }};
    }
    
    .lang-currency-groups .dropdown-menu {
      background-color: {{ bg_header_bottom_color }};
    }

    .header-06 .search-form .search-bar {
      background-color: {{ bg_search_form_color }};
    }
   
  }
</style>